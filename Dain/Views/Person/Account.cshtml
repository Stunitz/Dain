@{
    ViewBag.Title = "Dashboard - Account";
    ViewBag.Name = "João";
    ViewBag.Imagem = "/Content/Person.jpg";
    Layout = "~/Views/Shared/_Layout-Dashboard-Person.cshtml";
}

<div class="line">
    <h5 style="color:dodgerblue;">Account Details</h5>
</div>

<div class="line-np">

    <p class="ul" onclick="Show(1)">Change Name, Birth date</p>
    <form class="form-signin" id="nameForm" name="nameForm" style="display:none;">
        <div class="card text-center col-md-4">
            <div class="card-body">
                <label for="registerName">Name</label>
                <input type="text" id="registerName" class="form-control" placeholder="Name" required autofocus style=""><br />

                <label for="registerBirth">Birth</label>
                <input type="date" id="registerBirth" placeholder="Birth" class="form-control" required /><br />

                <button class="btn btn-outline-dark" type="submit">Change</button>
            </div>
        </div>
        <br />
    </form>

    <p class="ul" onclick="Show(2)">Change Address</p>

    <form class="form-signin" id="addressForm" name="addressForm" style="display:none;">
        <div class="card text-center col-md-4">
            <div class="card-body">
                <label for="registerAddress">Address</label>
                <input type="text" id="registerAddress" class="form-control" placeholder="Address" required autofocus style=""><br />

                <label for="registerState">State</label>
                <select class="form-control">
                    <option>Paraná</option>
                </select><br />

                <label for="registerCity">City</label>
                <input type="text" id="registerCity" class="form-control" placeholder="City" required autofocus style=""><br />

                <button class="btn btn-outline-dark" type="submit">Change</button>
            </div>
        </div>
        <br />
    </form>

    <p class="ul" onclick="Show(3)">Change Pass</p>
    <form class="form-signin" id="passForm" name="passForm" style="display:none;">
        <div class="card text-center col-md-4">
            <div class="card-body">
                <label for="registerPassword" class="sr-only">Password</label>
                <input type="password" id="registerPassword" class="form-control" placeholder="Password" required autofocus style=""><br />
                <button class="btn btn-outline-dark" type="submit">Change</button>
            </div>
        </div>
        <br />
    </form>

    <p class="ul" onclick="Show(4)">Change Email</p>
    <form class="form-signin" id="emailForm" name="emailForm" style="display:none;">
        <div class="card text-center col-md-4">
            <div class="card-body">
                <label for="registerEmail" class="sr-only">Email</label>
                <input type="email" id="registerEmail" class="form-control" placeholder="Email" required autofocus style=""><br />
                <button class="btn btn-outline-dark" type="submit">Change</button>
            </div>
        </div>
        <br />
    </form>

    @*<p class="ul">Layout Color</p>*@
</div>


<br />
<div class="line">
    <h5 style="color:dodgerblue;">Sessions</h5>
</div>

<div class="line-np">
    177.99.180.203<br />
    Último uso: Há menos de uma hora (sessão atual)
</div>

<br />
<div class="line">
    <h5 style="color:dodgerblue;">Credentials</h5>
</div>
<br />

<div class="line-np">
    <div class="card border-danger col-md-5">
        <div class="card-body text-danger">
            <h5 class="card-title">Delete Account</h5>
            <p class="card-text">Enter your password and click delete</p>
            <form class="form-signin" id="deleteForm" name="deleteForm">
                <label for="deletePassword" class="sr-only">Password</label>
                <input type="password" id="deletePassword" class="form-control border-danger col-md-6" placeholder="Password" required autofocus style=""><br />
                <button class="btn btn-outline-danger" type="submit">Delete</button><br />
            </form>
        </div>
    </div>
</div>
